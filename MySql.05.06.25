#Listar as bases existentes:
Show databases;


#Criar base de dados:
Create database revisao;


#Conectar base de dados:
use revisao;


#Criar tabela no banco de dados:
Create table aluno(
	matricula int primary key auto_increment,
	nome varchar(30) not null,
	idade int not null,
	sexo enum('M','F') not null,
	email varchar(30)
);


#Estrutura da tabela:
desc aluno;

